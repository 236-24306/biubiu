page {
	width: 100%;
	height: 100%;
	position: relative;
	background: white;
}

.body_left {
	width: 40%;
	left: 10%;
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	position: absolute;
	z-index: 98;
}

.body_left image {
	height: 60%;
}

.body_right {
	width: 40%;
	left: 50%;
	height: 100%;
	position: absolute;
	display: flex;
	justify-content: center;
	align-items: center;
}

.love-block {
	position: relative;
	width: 195rpx;
	height: 165rpx;
	display: grid;
	grid-template-rows: repeat(11, 15rpx);
	grid-template-columns: repeat(13, 15rpx);
}

.UpMove {
	animation: upmove 5s linear 1;
	animation-fill-mode: forwards;
	-webkit-animation-fill-mode: forwards;
}


@keyframes upmove {
	0% {
		margin-top: 0;
	}

	50% {
		margin-top: calc(-50vh - 100rpx);
	}

	100% {
		margin-top: calc(-100vh - 200rpx);
	}

}